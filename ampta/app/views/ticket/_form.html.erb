<% if @ticket.errors.any? %>
  <div id="error_explanation" class="alert alert-error">
    <h4><%= @ticket.errors.count %> fel gjorde att projektet inte kunde sparas</h4>
    <% @ticket.errors.full_messages.each do |msg| %>
        <span><%= msg %></span><br/>
    <% end %>
  </div>
<% end %>
<%= form_for(@ticket, :html => { :class => "form-horizontal ticket_form"} ) do |f| %>
  <!--<%= @ticket.errors.any? %>-->
  <div class="control-group">
    <%= f.label :name, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :name, :class => "input-xlarge" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => "control-label" %>
    <div class="controls">
      <%= f.text_area :description, :class => "input-xlarge", :rows => "5" %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">Status </label>
    <div class="controls">
      <%= f.select :status_id, options_from_collection_for_select(Status.all, :id, :status_name) %>
    </div>
  </div>
  <div class="actions control-group">
    <div class="controls">
      <%= f.submit :class => "btn btn-large btn-primary" %>
    </div>
  </div>
<% end %>
